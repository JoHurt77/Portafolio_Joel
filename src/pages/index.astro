---
import Layout from "../layouts/Layout.astro";

import Badge from "../components/Badge.astro";

import SocialPill from "../components/SocialPill.astro";
import CodeIcon from "../components/icons/Code.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import MailIcon from "../components/icons/Mail.astro";
import LinkIcon from "../components/icons/Link.astro";

import SectionContainer from "../components/SectionContainer.astro";
import Projects from "../components/Projects.astro";
---

<Layout
  title="Porfolio de Joel - Desarrollador y Programador Web"
  description="Contratame"
>
  <main class="px-2">
    <SectionContainer id="home" class="py-44 pb-32">
      <img
        class="rounded-full size-12 mb-4"
        src="Joel_anime_pic.webp"
        alt="Joel Picture"
      />
      <h1
        class="text-gray-900 dark:text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hey, soy Joel <a
          href="https://github.com/JoHurt77"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center hover:scale-105 transition"
        >
          <Badge>Apasionado por la tecnolog√≠a</Badge>
        </a>
      </h1>
      <h2
        class="text-xl lg:text-2xl text-balance max-w-[700px] text-black dark:text-white"
      >
        <span class="text-red-800 dark:text-red-200"
          >Desarrollador web Junior
        </span>de Madrid. Mi camino en este campo ha sido mayormente <span
          class="text-yellow-800 dark:text-yellow-200">autodidacta</span
        >, lo que me ha permitodo aprender y mejorar constantemente.
        <span class="text-yellow-800 dark:text-yellow-200">Especialista</span> en
        crear soluciones dinamicas y funcionales.
      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill href="https://linkedin.com/in/joel-leon-hurtado-johurt77/">
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/JoHurt77">
          <GitHubIcon class="size-4 md:size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="mailto:joel.leon.hurtado@gmail.com">
          <MailIcon class="size-4 md:size-6" />
          joel.leon.hurtado@gmail.com
        </SocialPill>
        <SocialPill href="/CV_Joel_Leon.pdf" download="CV_Joel_Leon">
          <LinkIcon class="size-4 md:size-6" />
          Descargar CV
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>
  </main>
</Layout>
